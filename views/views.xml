    <!-- Top menu item -->

    <menuitem name="Gestión de eventos" id="gestion_eventos.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Listas" id="gestion_eventos.menu_1" parent="gestion_eventos.menu_root"/>
<!--
    <menuitem name="Menu 2" id="gestion_eventos.menu_2" parent="gestion_eventos.menu_root"/>
-->
    <!-- actions -->
    <menuitem name="Events" id="gestion_eventos.event_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_event"/>

    <menuitem name="Fases" id="gestion_eventos.fase_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_fase"/>
    
    <menuitem name="Materials" id="gestion_eventos.material_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_material"/>
              
    <menuitem name="Types" id="gestion_eventos.type_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_type"/>

    <menuitem name="Budget Templates" id="gestion_eventos.budget_template_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_budget_template"/>

    <menuitem name="Budgets" id="gestion_eventos.budget_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_budget_event"/>

    <menuitem name="Lines" id="gestion_eventos.line_list" parent="gestion_eventos.menu_1"
              action="gestion_eventos.action_window_line"/>
